<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.natural_colombiapp.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_prefsFragment"
            app:destination="@id/prefsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_recyclerViewActivity"
            app:destination="@id/recyclerViewActivity" />
    </fragment>
    <fragment
        android:id="@+id/prefsFragment"
        android:name="com.example.natural_colombiapp.PrefsFragment"
        android:label="PrefsFragment" />
    <activity
        android:id="@+id/recyclerViewActivity"
        android:name="com.example.natural_colombiapp.RecyclerViewActivity"
        android:label="activity_recycler"
        tools:layout="@layout/activity_recycler" />
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.natural_colombiapp.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" />
</navigation>