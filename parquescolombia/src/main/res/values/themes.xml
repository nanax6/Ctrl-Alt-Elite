<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NaturalColombiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titulo_app">
        <item name="android:text">@string/tituloApp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/indigo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Texto_titulo_parques">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/ruby_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aladin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Texto_titulo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/autum</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/berkshire_swash</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Texto_descripcion">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/meadow</item>
        <item name="android:fontFamily">@font/averia_libre_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Texto_puntuacion">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/shadow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/almendra_bold</item>
    </style>

    <style name="Texto_subtitulo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/forest</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/almendra_bold</item>
    </style>

    <style name="Texto_subtitulo_valor">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/peacock_blue</item>
        <item name="android:fontFamily">@font/averia_libre</item>
    </style>
</resources>