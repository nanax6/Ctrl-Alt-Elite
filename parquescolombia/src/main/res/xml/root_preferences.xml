<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/sync_header">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="Notificaciones"
            android:title="Activar Notificaciones"
            android:icon="@drawable/ic_notifications_active"/>

        <CheckBoxPreference
            app:dependency="Notificaciones"
            android:defaultValue="false"
            android:key="sonido_notificaciones"
            android:title="Activar sonido de notificaciones"
            android:icon="@drawable/ic_notifications_off"/>

    </PreferenceCategory>

</PreferenceScreen>